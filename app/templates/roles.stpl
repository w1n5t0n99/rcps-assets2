
<html lang="en">
<style>
  body {
    padding-top: 105px;
  }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script>
  $(document).ready(function () {
  //attach your handler after the element is properly created
  $('#delete-eo-modal').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget); // Button that triggered the modal
    var recipient = button.data('identifier'); // Extract info from data-* attributes
    // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
    // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
    var modal = $(this);
    modal.find('.modal-body ').find('#row_id').val(recipient);
  });
  });
</script>

<head>
  <title>Roles</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
  <% include!("search-bar.stpl"); %>
  <% include!("nav-bar.stpl"); %>
  <% include!("messages.stpl"); %>
  <div class="position-relative mx-3 my-4">
    <table class="table">
      <thead class="bg-light">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Created</th>
          <th> </th>
        </tr>
      </thead>
      <tbody>
        <% for role in &roles { %>
            <tr>
                <td><%= role.id %></td>
                <td><%= role.description %></td>
                <td><%= role.created_at.to_string() %></td>
                <td>
                  <div class="dropdown dropstart text-end">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                    </button>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="/account/roles/<%= role.id %>/edit">View</a></li>
                      <% if role.id.eq("admin") == false && role.id.eq("inactive") == false { %>
                        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#delete-eo-modal" data-identifier="<%= role.id %>">Delete</a></li>
                      <% } %> 
                    </ul>
                  </div>
                </td>
              </tr>
        <% } %> 
      </tbody>
      <tbody>
  
      </tbody>
    </table>
  </div>

  <!-- The Modal -->
<div class="modal fade" id="delete-eo-modal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h5 class="modal-title">Permanently Delete Role</h5>
      </div>

      <form id="delete-comment-form" action="/account/roles/delete" method="post">
        <input type="hidden" name="_method" value="delete" autocomplete="off" />
        <!-- Modal body -->
        <div class="modal-body">
          <div class="form-group">
            <p>Are you sure you want to delete?</p>
            <input type="hidden" name="row_id" id="row_id" autocomplete="off" />
          </div>
          <div id="modal-info"></div>
        </div>
        <!-- Modal footer -->
        <div class="modal-footer delete-modal-footer">
          <button type="submit" class="btn btn-danger">Delete</button>
          <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Nevermind</button>
        </div>
      </form>

    </div>
  </div>
</div>

</body>

</html>